{
  "compilerOptions": {
    "target": "ES2023",
    "module": "ESNext", // Usar m√≥dulos ES
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true, // Permite interoperabilidade entre CommonJS e ES Modules
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./build",
    "rootDir": "./"
  },
  "include": ["src/**/*", "db/migrations/*"],
  "exclude": ["node_modules"]
}
